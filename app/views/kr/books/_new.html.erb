<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <h2>Enter a New Book</h2>
    <form id="new-book-form">
      <div class="form-group">
        <label for="book-title">Book Title</label>
        <input type="text" class="form-control" name="title" id="book-title" placeholder="Title">
      </div>

      <div class="form-group">
        <label for="book-author">Author</label>
        <input type="text" class="form-control" name="author" id="book-author" placeholder="Author">
      </div>

      <div class="form-group">
        <label for="contact_name">Book Details (optional)</label>
        <input type="text" class="form-control" name="isbn" id="book-isbn" placeholder="ISBN Number">
        <input type="text" class="form-control" name="pub_year" id="book-pub-year" placeholder="Year of Publication">
        <input type="number" class="form-control" name="num_pages" id="book-num-pages" placeholder="Number of Pages">
        <input type="number" class="form-control" name="reading_level" id="book-reading-level" placeholder="Grade Level">
        <input type="text" class="form-control" name="genre" id="book-genre" placeholder="Genre">
      </div>
              <input type="submit" class="btn btn-primary" value="Submit">
    </form>
  </div>
</div>