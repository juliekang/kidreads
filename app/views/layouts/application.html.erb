<!DOCTYPE html>
<html>
  <head>
    <title>Welcome to KidReads!</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <% currentRole = current_user.user_type.label if current_user %>
    <% currentUserID = current_user ? current_user.id : "null" %>
    <script>$(function () { 
        KR.libraryKey="<%= ENV['LIBRARY_KEY'] %>";
        KR.currentUserID=<%= currentUserID %>;
        KR.currentRole="<%= currentRole %>";
        KR.initialize();
      }); 
    </script>
  </head>
  <body>

  <div class="container">
    <div id="header"></div>
    
    <% if current_user %>
      <ul>
        <li>Logged in as: <%= current_user.username %></li>
        <li><%= button_to "Logout", session_url, :method => :delete %></li>
      </ul>
    <% end %>

     <%= yield %>

    <% if current_user %>
      <div id="footer"></div>
    <% end %>
  </div>
  </body>
</html>
